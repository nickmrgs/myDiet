<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medb">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="439dp"
        android:layout_height="113dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="545dp"
        android:scaleType="centerCrop"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/dmedmen" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="851dp"
        android:fontFamily="@font/thin"
        android:gravity="center"
        android:text="Medditerenian"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView7"
        app:layout_constraintVertical_bias="0.04000002" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benefits:"
        android:textColor="#00a8e2"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/textView24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/meals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meals:"
        android:textColor="#00a8e2"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView24"
        app:layout_constraintVertical_bias="0.65" />


    <TextView
        android:id="@+id/textView24"
        android:layout_width="278dp"
        android:layout_height="65dp"
        android:gravity="left"
        android:text="✔Unique and delicious food \n✔Healthy and complete diet plan \n✔Weekly meal plans"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView7"
        app:layout_constraintVertical_bias="0.060000002" />

    <TextView
        android:id="@+id/vegan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="&quot;I love medditerenian food as much as I love \n the countries there.I made this diet in \n order to share their beautiful lifestyle to everyone&quot;"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView20"
        app:layout_constraintVertical_bias="0.69" />

    <ImageView
        android:id="@+id/simon"
        android:layout_width="83dp"
        android:layout_height="78dp"
        android:layout_marginBottom="13dp"
        android:adjustViewBounds="true"
        android:src="@drawable/yassuo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vegan"
        app:layout_constraintVertical_bias="0.13999999" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Mohammed Lester,World Traveller"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/simon"
        app:layout_constraintVertical_bias="0.13" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:layout_marginBottom="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView24"
        app:layout_constraintVertical_bias="0.29000002"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintTop_toBottomOf="@id/textView24">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/divider"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/breakfastLayout"
                    android:layout_width="201dp"
                    android:layout_height="256dp"
                    android:background="@drawable/recipesboxstyle">

                    <ImageView
                        android:id="@+id/breakfastView"
                        android:layout_width="199dp"
                        android:layout_height="136dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/imgboxhelp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/breakfast2"
                        app:tintMode="src_in" />

                    <TextView
                        android:id="@+id/breakfastText"
                        android:layout_width="190dp"
                        android:layout_height="64dp"


                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="141dp"
                        android:layout_marginEnd="6dp"
                        android:text="Vanilla Strawberry Yogurt"
                        android:textColor="#00a8e2"
                        android:textSize="24sp"
                        app:fontFamily="@font/light" />

                    <TextView
                        android:id="@+id/breakfastcText"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"


                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="83dp"
                        android:layout_marginTop="224dp"
                        android:layout_marginEnd="-21dp"
                        android:text="100 calories"
                        android:textColor="#5C5B5B"
                        android:textSize="20sp"
                        app:fontFamily="@font/light" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF" />

            <RelativeLayout
                android:id="@+id/breakfastLayout2"
                android:layout_width="201dp"
                android:layout_height="256dp"
                android:background="@drawable/recipesboxstyle">

                <ImageView
                    android:id="@+id/breakfast2View"
                    android:layout_width="199dp"
                    android:layout_height="136dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/breakfast3"
                    app:tintMode="src_in" />

                <TextView
                    android:id="@+id/breakfast2Text"
                    android:layout_width="190dp"
                    android:layout_height="64dp"


                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="141dp"
                    android:layout_marginEnd="6dp"
                    android:text="Blueberry Waffle"
                    android:textColor="#00a8e2"
                    android:textSize="24sp"
                    app:fontFamily="@font/light" />

                <TextView
                    android:id="@+id/breakfast2cText"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"


                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="83dp"
                    android:layout_marginTop="224dp"
                    android:layout_marginEnd="-21dp"
                    android:text="320 calories"
                    android:textColor="#5C5B5B"
                    android:textSize="20sp"
                    app:fontFamily="@font/light" />

            </RelativeLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/breakfastLayout3"
                    android:layout_width="201dp"
                    android:layout_height="256dp"
                    android:background="@drawable/recipesboxstyle">

                    <ImageView
                        android:id="@+id/breakfast3View"
                        android:layout_width="199dp"
                        android:layout_height="136dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/imgboxhelp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/breakfast4"
                        app:tintMode="src_in" />

                    <TextView
                        android:id="@+id/breakfast3Text"
                        android:layout_width="190dp"
                        android:layout_height="64dp"


                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="141dp"
                        android:layout_marginEnd="6dp"
                        android:text="Spinach Egg Poure"
                        android:textColor="#00a8e2"
                        android:textSize="24sp"
                        app:fontFamily="@font/light" />

                    <TextView
                        android:id="@+id/breakfastc3Text"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"


                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="83dp"
                        android:layout_marginTop="224dp"
                        android:layout_marginEnd="-21dp"
                        android:text="452 calories"
                        android:textColor="#5C5B5B"
                        android:textSize="20sp"
                        app:fontFamily="@font/light" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider4"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF" />

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btnOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/med_button"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Choose Plan"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96" />

</androidx.constraintlayout.widget.ConstraintLayout>




